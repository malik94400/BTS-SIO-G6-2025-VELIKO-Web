{% block styles %}
    <style>
        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            width: 30px;
            height: 30px;
        }

        .delete-button {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 8px 16px; /* Adjusted padding to make the button smaller */
            border-radius: 8px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

        .delete-button:hover {
            background-color: #c82333;
        }

        .button-container {
            display: flex;
            justify-content: center;
            width: 100%;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-container {
            background-color: #ffffff;
            padding: 50px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
        }

        h2 {
            font-size: 1.8rem;
            color: #007bff;
            text-align: center;
            margin-bottom: 10px;
            font-weight: bold;
        }

        form {
            width: 100%;
        }

        label {
            font-size: 0.9rem;
            color: #555;
            margin-bottom: 5px;
        }

        input, select, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 12px;
            border: 1px solid #d1d1d1;
            border-radius: 6px;
            font-size: 0.95rem;
            background-color: #f8f9fa;
            transition: all 0.2s;
        }

        input:focus, select:focus, textarea:focus {
            border-color: #007bff;
            background-color: #fff;
        }

        button {
            background-color: #007bff;
            color: #fff;
            padding: 12px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
            width: 100%;
            margin-top: 10px;
        }

        button:hover {
            background-color: #0056b3;
        }

        .form-error {
            color: #ff3860;
            font-size: 0.85rem;
            margin-bottom: 10px;
        }

        @media (max-width: 600px) {
            .form-container {
                padding: 15px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <!-- Back button in top-left corner -->
        <a href="{{ path('app_profil') }}" class="back-button">
            <img src="/AnimatedIcons/back.gif" alt="Back" style="width: 30px; height: 30px;">
        </a>

        <h2>Modifier mon mot de passe</h2>

        {{ form_start(form) }}

        {% for message in app.flashes('warning') %}
                {{ message }}
        {% endfor %}
        
        {{ form(form) }}

        {{ form_end(form) }}
    </div>
{% endblock %}