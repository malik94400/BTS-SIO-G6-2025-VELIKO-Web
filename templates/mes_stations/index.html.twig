{% extends 'base.html.twig' %}

{% block styles %}
        <style>
                body {
                        background-color: #f0f2f5;
                }
                /* Other styles */
                .favorites-container {
                        max-width: 800px;
                        margin: 0 auto;
                        padding: 20px;
                        background-color: #ffffff;
                        border-radius: 8px;
                        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
                        font-family: Arial, sans-serif;
                        position: relative; /* Added to position the back button */
                }

                .back-button {
                        position: absolute;
                        top: 20px;
                        left: 20px;
                        width: 30px;
                        height: 30px;
                }

                .favorites-container h2 {
                        font-size: 24px;
                        color: #333;
                        text-align: center;
                        margin-bottom: 20px;
                }

                .station-list {
                        display: flex;
                        flex-direction: column;
                        gap: 15px;
                }

                .station-item {
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                        padding: 15px;
                        background-color: #fff;
                        border: 1px solid #ddd;
                        border-radius: 8px;
                        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
                        transition: transform 0.2s ease;
                }

                .station-item:hover {
                        transform: scale(1.02);
                }

                .station-info h3 {
                        font-size: 20px;
                        color: #007bff;
                        margin: 0;
                }

                .station-info p {
                        font-size: 14px;
                        color: #666;
                        margin-top: 5px;
                }

                .retirerFavorite-btn {
                        background-color: #dc3545;
                        color: white;
                        border: none;
                        border-radius: 5px;
                        padding: 8px 12px;
                        cursor: pointer;
                        font-size: 14px;
                        transition: background-color 0.3s ease;
                }

                .retirerFavorite-btn {
                        background-color: #c82333;
                }

                .favorite-btn {
                    background-color: #007bff;
                    color: white;
                    border: none;
                    border-radius: 5px;
                    padding: 8px 12px;
                    cursor: pointer;
                    font-size: 14px;
                    transition: background-color 0.3s ease;
                }

                .favorite-btn:hover {
                    background-color: #0056b3;
                }

        </style>
{% endblock %}

{% block title %}Stations Favorites{% endblock %}

{% block body %}
        <div class="favorites-container">
                <!-- Back button in top-left corner -->
                <a href="{{ path('app_profil') }}" class="back-button">
                    <img src="/AnimatedIcons/back.gif" alt="Back" style="width: 30px; height: 30px;">
                </a>

               <h2 style="color: #007bff;">Mes Stations Favorites</h2>
                <div class="station-list">
                        {% for station in station_names %}
                            <div class="station-item">
                                        <div class="station-info">
                                                <h3>{{ station.name }}</h3>
                                        </div>
                                        <form action="{{ path('app_station_delete', {'id': station.id}) }}" method="post">
                                                <button type="submit" class="retirerFavorite-btn">Retirer des favoris</button>
                                        </form>
                                </div>
                        {% endfor %}
                </div>
        </div>

    <!-- Liste de toutes les stations -->
    <div>
        <h2>Les stations</h2>
        <div class="station-list">
            {% for station in stations %}
                <div class="station-item">
                    <div class="station-info">
                        <h3>{{ station.name }}</h3>
                    </div>
                    <form action="{{ path('app_add_favorite', {'id': station.id}) }}" method="post">
                        <button type="submit" class="favorite-btn">Mettre en favoris</button>
                    </form>
                </div>
            {% endfor %}

        </div>
    </div>



{% endblock %}