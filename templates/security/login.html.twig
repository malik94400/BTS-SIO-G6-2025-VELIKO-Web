{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block styles %}
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0f2f5;
            font-family: Arial, sans-serif;
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

        h1 {
            font-size: 1.5rem;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        label {
            font-size: 0.9rem;
            margin-bottom: 5px;
            display: block;
            color: #555;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            font-size: 1rem;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .alert {
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid transparent;
            border-radius: 5px;
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }

        .checkbox {
            display: flex;
            align-items: center; /* Aligne verticalement le texte avec la case à cocher */
            margin-bottom: 10px;
        }

        .checkbox input[type="checkbox"] {
            width: 15px; /* Taille de la case à cocher */
            height: 18px; /* Taille de la case à cocher */
            margin-right: 10px; /* Espace entre la case à cocher et le texte */
            cursor: pointer; /* Curseur de la souris pointer sur la case */
            accent-color: #007bff; /* Couleur de la case à cocher */
        }

        .checkbox label {
            font-size: 0.9rem; /* Taille de la police */
            color: #555; /* Couleur du texte */
            cursor: pointer; /* Curseur de la souris pointer sur le texte */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            {% for message in app.flashes('success') %}
                <div > {{ message }}</div>
            {% endfor %}

            <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

            <label for="username">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>

            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Se souvenir de moi</label>
            </div>

            <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>

            <a href="{{ path('app_renseignerEmail') }}" > Mot de passe oublié?</a>
            <a href="{{ path('app_register') }}" > Pas de compte?</a>
        </form>
    </div>
{% endblock %}