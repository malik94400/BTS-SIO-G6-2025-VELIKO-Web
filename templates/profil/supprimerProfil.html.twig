{% extends 'base.html.twig' %}

{% block styles %}
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .confirmation-container {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 400px;
            width: 100%;
        }

        h2 {
            font-size: 1.8rem;
            color: #333;
            margin-bottom: 20px;
            font-weight: bold;
        }

        p {
            color: #555;
            font-size: 1rem;
            margin-bottom: 25px;
        }

        .sad-gif {
            width: 100px;
            margin-bottom: 15px;
        }

        .btn {
            font-size: 1rem;
            padding: 10px 20px;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            margin: 5px;
            width: calc(50% - 10px);
            transition: background-color 0.3s ease;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="confirmation-container">
        <!-- Add the sad GIF here -->
        <img src="{{ asset('AnimatedIcons/sadCat.gif') }}" alt="Sad GIF" class="sad-gif">

        <h2>Confirmer la suppression de votre compte</h2>
        <p>Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.</p>

        <!-- Confirmation form -->
        <form action="{{ path('app_profil_suppression', {id: user.id}) }}" method="post" style="display: inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
            <button type="submit" class="btn btn-danger">Oui, supprimer mon compte</button>
        </form>

        <!-- Cancel button -->
        <a href="{{ path('app_profil') }}" class="btn btn-secondary">Annuler</a>
    </div>
{% endblock %}