{% extends 'base.html.twig' %}

{% block title %}Modifier mes informations{% endblock %}

{% block styles %}
    <style>
        .delete-button {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 12px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
            width: 100%;
            margin-top: 10px;
        }

        .delete-button:hover {
            background-color: #c82333;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 120vh;
        }

        .form-container {
            position: relative;
            background-color: #ffffff;
            padding: 50px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .back-button {
            position: absolute;
            top: 15px;
            left: 15px;
        }

        h2 {
            font-size: 1.8rem;
            color: #007bff;
            text-align: center;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .form {
            width: 100%;
        }

        .form-row {
            display: flex;
            justify-content: space-between;
            gap: 30px;
            width: 100%;
        }

        .form-row .field {
            flex: 1;
        }

        .dob-row .field {
            flex: 1;
            width: 33%;
        }

        .input-field {
            width: 100%;
            padding: 10px;
            margin-bottom: 12px;
            border: 1px solid #d1d1d1;
            border-radius: 6px;
            font-size: 0.95rem;
            background-color: #f8f9fa;
            transition: all 0.2s;
        }

        .input-field:focus {
            border-color: #007bff;
            background-color: #fff;
        }

        button {
            background-color: #007bff;
            color: #fff;
            padding: 12px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
            width: 100%;
            margin-top: 10px;
        }

        button:hover {
            background-color: #0056b3;
        }

        .form-error {
            color: #ff3860;
            font-size: 0.85rem;
            margin-bottom: 10px;
        }

        @media (max-width: 600px) {
            .form-container {
                padding: 15px;
            }

            .form-row {
                flex-direction: column;
            }

            .dob-row {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">

        <a href="{{ path('app_profil') }}" class="back-button">
            <img src="/AnimatedIcons/back.gif" alt="Back" style="width: 30px; height: 30px;">
        </a>

        <h2>Modifier mes informations</h2>

        {{ form_start(form, {'attr': {'class': 'form'}}) }}
        {{ form_errors(form) }}

        <div class="form-row">
            <div class="field">
                <p>Nom:</p>
                {{ form_row(form.nom, {'attr': {'class': 'input-field'}}) }}
            </div>
            <div class="field">
                <p>Prénom:</p>
                {{ form_row(form.prenom, {'attr': {'class': 'input-field'}}) }}
            </div>
        </div>

        <p>Email:</p>
        {{ form_row(form.email, {'attr': {'class': 'input-field'}}) }}

        <p>Ville:</p>
        {{ form_row(form.ville, {'attr': {'class': 'input-field'}}) }}

        <p>Code postal:</p>
        {{ form_row(form.codePostale, {'attr': {'class': 'input-field'}}) }}

        <p>Adresse:</p>
        {{ form_row(form.adresse, {'attr': {'class': 'input-field'}}) }}

        <p>Date de naissance:</p>
        <div class="form-row dob-row">
            <div class="field">
                {{ form_row(form.dateNaissance.day, { 'label': 'Jour', 'attr': {'class': 'input-field'}}) }}
            </div>
            <div class="field">
                {{ form_row(form.dateNaissance.month, { 'label': 'Mois', 'attr': {'class': 'input-field'}}) }}
            </div>
            <div class="field">
                {{ form_row(form.dateNaissance.year, { 'label': 'Année', 'attr': {'class': 'input-field'}}) }}
            </div>
        </div>

        <br>
        <button type="submit" class="button">Modifier le profil</button>
        {{ form_end(form) }}
        <br>
    </div>
{% endblock %}